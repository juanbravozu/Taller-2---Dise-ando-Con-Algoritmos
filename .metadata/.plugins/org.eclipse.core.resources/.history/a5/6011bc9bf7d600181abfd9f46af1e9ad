package mquevedojbravo;

import processing.core.PApplet;
import processing.core.PImage;

public class Mundo {

	private PApplet app;
	private Jugador j;
	private PImage fondo;
	
	public Mundo(PApplet app) {
		this.app = app;
		j = new Jugador(app);
		fondo = app.loadImage("fondo.png");
	}
	
	public void pintar() {
		app.image(fondo, app.width/2, app.height/2);
		j.pintar();
	}
}